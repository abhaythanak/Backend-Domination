<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hisaab Records</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Hisaab Records</h1>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% hisaabRecords.forEach(record => { %>
                <tr>
                    <td><%= record.date %></td>
                    <td><%= record.details %></td>
                    <td>
                        <a href="/edit/<%= record.id %>">Edit</a>
                        <form action="/delete/<%= record.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
  
</body>
</html>
